<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.example.lunabeeusers.data.model.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/userAvatarIv"
            android:layout_width="@dimen/avatar_preview_size"
            android:layout_height="@dimen/avatar_preview_size"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/short_margin"
            android:layout_marginBottom="@dimen/short_margin"
            android:background="@color/purple_light_extra"
            app:imageUrl="@{user.imgSrcUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userAvatarIv"
            app:layout_constraintEnd_toEndOf="parent"
            >


            <TextView
                android:id="@+id/firstnameTv"
                android:layout_width="wrap_content"
                app:firstname="@{user}"
                style="@style/textview_user_item"
                tools:text="Woody" />

            <TextView
                android:id="@+id/lastnameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/short_margin"
                app:lastname="@{user}"
                style="@style/textview_user_item"
                tools:text="Harrelson" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>